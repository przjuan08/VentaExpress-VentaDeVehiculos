<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VentaExpress" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="materialButtonStyle">@style/Widget.VentaExpress.Button</item>
        <item name="textInputStyle">@style/Widget.VentaExpress.TextInputLayout</item>
        <item name="cardViewStyle">@style/Widget.VentaExpress.Card</item>
    </style>

    <style name="Theme.VentaExpress" parent="Base.Theme.VentaExpress">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Theme.VentaExpress.Splash" parent="Theme.VentaExpress">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.VentaExpress.Button" parent="Widget.Material3.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">48dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.VentaExpress.MediumComponent</item>
    </style>

    <style name="Widget.VentaExpress.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">48dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.VentaExpress.MediumComponent</item>
    </style>

    <!-- TextInputLayout Styles -->
    <style name="Widget.VentaExpress.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="errorTextColor">@color/error</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- CardView Styles -->
    <style name="Widget.VentaExpress.Card" parent="CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="strokeColor">@color/divider</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Chip Styles -->
    <style name="Widget.VentaExpress.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="android:checkable">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- AppBar Styles -->
    <style name="Widget.VentaExpress.AppBar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/on_primary</item>
        <item name="subtitleTextColor">@color/on_primary</item>
        <item name="navigationIconTint">@color/on_primary</item>
        <item name="android:elevation">4dp</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.VentaExpress.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.VentaExpress.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.VentaExpress.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Text Styles -->
    <style name="Text.VentaExpress.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.VentaExpress.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.VentaExpress.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.VentaExpress.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.VentaExpress.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.VentaExpress.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- ProgressBar Styles -->
    <style name="Widget.VentaExpress.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/primary</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- RecyclerView Styles -->
    <style name="Widget.VentaExpress.RecyclerView" parent="">
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <!-- Dialog Styles -->
    <style name="Theme.VentaExpress.Dialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:windowAnimationStyle">@style/Animation.VentaExpress.Dialog</item>
    </style>

    <!-- Animation Styles -->
    <style name="Animation.VentaExpress.Dialog" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!-- Estilos simples sin sufijo que buscan los layouts -->
    <style name="Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Margin">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Padding">
        <item name="android:padding">8dp</item>
    </style>

    <!-- Layout VentaExpress Styles (para futuras referencias) -->
    <style name="Layout.VentaExpress" parent="Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Layout.VentaExpress.Center" parent="Layout.VentaExpress">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Layout.VentaExpress.CenterHorizontal" parent="Layout.VentaExpress">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Layout.VentaExpress.CenterVertical" parent="Layout.VentaExpress">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Margin VentaExpress Styles -->
    <style name="Margin.VentaExpress" parent="Margin">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Margin.VentaExpress.Small" parent="Margin.VentaExpress">
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="Margin.VentaExpress.Medium" parent="Margin.VentaExpress">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Margin.VentaExpress.Large" parent="Margin.VentaExpress">
        <item name="android:layout_margin">16dp</item>
    </style>

    <!-- Padding VentaExpress Styles -->
    <style name="Padding.VentaExpress" parent="Padding">
        <item name="android:padding">8dp</item>
    </style>

    <style name="Padding.VentaExpress.Small" parent="Padding.VentaExpress">
        <item name="android:padding">4dp</item>
    </style>

    <style name="Padding.VentaExpress.Medium" parent="Padding.VentaExpress">
        <item name="android:padding">8dp</item>
    </style>

    <style name="Padding.VentaExpress.Large" parent="Padding.VentaExpress">
        <item name="android:padding">16dp</item>
    </style>

    <!-- Additional useful styles -->
    <style name="Layout.MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Layout.WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Layout.MatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Layout.MatchHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>